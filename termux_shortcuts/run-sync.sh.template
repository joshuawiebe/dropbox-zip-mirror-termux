#!/data/data/com.termux/files/usr/bin/env bash
VENV="__VENV_DIR__"
PY="$VENV/bin/python"
SCRIPT="__SCRIPT_PATH__"
LOG="__LOG_PATH__"

"$PY" "$SCRIPT" >> "$LOG" 2>&1

if command -v termux-notification >/dev/null 2>&1; then
  termux-notification --title "Dropbox Mirror" --content "Sync finished. See $LOG" --priority high
fi